<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Ignite.Tech.Widget.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#cac0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Ignite.Tech.Widget.TextView.Social" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSilver</item>
    </style>

    <style name="Ignite.Tech.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Ignite.Tech.TextAppearance.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/colorSilver</item>
    </style>
    <style name="Ignite.Tech.TextAppearance.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Ignite.Tech.TextAppearance.Heading" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
